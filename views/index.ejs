<%- include('partials/header') %>

<main class="container my-4">
    <section class="jumbotron bg-light p-5 rounded">
        <h1 class="display-4">Welcome to FinTech</h1>
        <p class="lead">Manage your finances with our secure and easy-to-use platform.</p>
        <hr class="my-4">
        <% if (!locals.user) { %>
            <p>Get started by creating an account or logging in.</p>
            <div class="mt-3">
                <a class="btn btn-primary btn-lg me-2" href="/register" role="button">Register</a>
                <a class="btn btn-secondary btn-lg" href="/login" role="button">Login</a>
            </div>
        <% } else { %>
            <p>Welcome back, <%= locals.user.username %>! Check your dashboard to manage your account.</p>
            <a class="btn btn-primary btn-lg mt-3" href="/dashboard" role="button">Go to Dashboard</a>
        <% } %>
    </section>

    <section class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Secure Transactions</h5>
                    <p class="card-text">Our platform uses state-of-the-art encryption to ensure your financial data remains safe and secure.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Real-time Updates</h5>
                    <p class="card-text">Stay informed with instant notifications and real-time balance updates for all your transactions.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Financial Insights</h5>
                    <p class="card-text">Gain valuable insights into your spending habits with our advanced analytics tools.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="mt-5">
        <h2 class="text-center mb-4">Why Choose FinTech?</h2>
        <div class="row">
            <div class="col-md-6">
                <ul class="list-group">
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Easy-to-use interface
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        24/7 customer support
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Competitive interest rates
                    </li>
                </ul>
            </div>
            <div class="col-md-6">
                <ul class="list-group">
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Mobile app for on-the-go banking
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Integration with major financial institutions
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Customizable alerts and notifications
                    </li>
                </ul>
            </div>
        </div>
    </section>

    <section class="text-center mt-5">
        <h2 class="mb-4">Ready to take control of your finances?</h2>
        <% if (!locals.user) { %>
            <a class="btn btn-primary btn-lg" href="/register" role="button">Get Started Now</a>
        <% } else { %>
            <a class="btn btn-primary btn-lg" href="/dashboard" role="button">Manage Your Account</a>
        <% } %>
    </section>
</main>

<%- include('partials/footer') %>